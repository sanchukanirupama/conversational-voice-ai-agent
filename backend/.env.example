OPENAI_API_KEY=sk-your-key
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=lsv2-your-key
LANGCHAIN_PROJECT="Voice Agent Bank ABC"

# App
HOST=0.0.0.0
PORT=8000
GREETING_MESSAGE=Welcome to Bank ABC. How can I help you?
CORS_ORIGINS=*

# LLM / Agent
LLM_MODEL=gpt-4o
LLM_TEMPERATURE=0
PROMPTS_FILE=backend/data/prompts.json

# Audio - STT
STT_MODEL=whisper-1
STT_LANGUAGE=en
STT_PROMPT=Bank ABC. Checking balance. Transfer money. Credit card. Account. Identity verification.

# Audio - TTS
TTS_MODEL=tts-1
TTS_VOICE=alloy
AUDIO_CHUNK_SIZE=4096

# Data
CUSTOMERS_FILE=backend/data/customers.json
DEFAULT_TRANSACTION_COUNT=3
